  "version": "2.0.0",
  "tasks": [
    {
      "label": "cmakeGenerate",
      "type": "shell",
      "command": "cmake",
      "args": ["-G", "MinGW Makefiles", "-B", "native-app/build"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "label": "build",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "native-app/build",
        "--config",
        "Release",
        "--target",
        "native-app"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "label": "package",
      "type": "shell",
      "command": "cpack",
      "args": [
        "--config",
        "native-app/build/CPackConfig.cmake",
        "-B",
        "native-app/build"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "label": "buildAndPackage",
      "dependsOn": ["build", "package"],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "type": "cmake",
      "label": "CMake: build",
      "command": "build",
      "targets": ["all"],
      "group": "build",
      "problemMatcher": [],
      "detail": "CMake template build task"
    }
  ]
}
